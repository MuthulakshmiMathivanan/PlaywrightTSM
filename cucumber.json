{
    "default": {
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "publishQuiet": false,
        "dryRun": false,
        "paths": [
            "src/tests/Features/**/*.feature"
        ],
        "require": [
            "src/tests/Steps/**/*.ts",
            "src/tests/Hooks/hooks.ts",
            "Pages/**/*.ts",
            "Hooks/*.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "progress-bar",
            "html:test-results/cucumber-report.html",
            "json:test-results/cucumber-report.json",
            "junit:test-results/report.xml"
        ]
    }
}